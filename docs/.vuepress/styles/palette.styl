//示例修改相关样式f12找到需要修改的地方找到对应class类拿过来直接用就行了

.theme-container.custom-page-class {
  .navbar{
    z-index: 1;
  }
  /* 特定页面的 CSS */
  .sidebar{
    // background: red;
    width: 16rem;
  }
  @media(max-width: 959px){
    .sidebar{
      // background: red;
      width: 15rem;
    }
  }
 @media(max-width: 1080px){
    .page {
        padding-left: 16rem;
    }
  }
  @media(max-width: 959px){
    .page {
        padding-left: 15rem;
    }
  }
  @media(max-width: 819px){
    .page {
        padding-left: 14rem;
    }
  }
  @media(max-width: 719px){
    .page {
        padding-left: 0rem;
    }
  }
  @media(min-width :1080px){
    .page {
      padding-left: 15rem;
    }
  }
  @media(min-width :1130px){
    .page {
      padding-left: 13rem;
    }
  }

}

